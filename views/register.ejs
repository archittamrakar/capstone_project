<%- include('partials/header') %>
<div class="form-container">
    <h2 style="color:blueviolet">Register</h2>
    <% if(locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <form method="post">
        <div class="form-group">
            <label for="firstName" style="color:rgb(9, 15, 10)">First Name</label>
            <input type="text" name="firstName" id="firstName" class="form-control" value="<%= locals.firstName || '' %>" required />
        </div>
        <div class="form-group">
            <label for="lastName" style="color:rgb(9, 15, 10)">Last Name</label>
            <input type="text" name="lastName" id="lastName" class="form-control" value="<%= locals.lastName || '' %>" required />
        </div>
        <div class="form-group">
            <label for="roomnum" style="color:rgb(9, 15, 10)">Room Number</label>
            <input type="number" name="roomnum" id="roomnum" class="form-control" value="<%= locals.roomnum || '' %>" required />
        </div>
        <div class="form-group">
            <label for="floor" style="color:rgb(9, 15, 10)">Floor</label>
            <input type="number" name="floor" id="floor" class="form-control" value="<%= locals.floor || '' %>" required />
        </div>    
        <div class="form-group">
            <label for="username" style="color:rgb(9, 15, 10)">Username</label>
            <input type="email" name="username" id="username" class="form-control" value="<%= locals.username || '' %>" required />
        </div>
        <div class="form-group">
            <label for="password" style="color:rgb(9, 15, 10)">Password</label>
            <input type="password" name="password" id="password" class="form-control" required />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Register</button>
            <a href="/login" class="btn btn-link">Cancel</a>
        </div>
        <div class="form-group">
            <label for="emergency" style="color:rgb(214, 130, 130)">emergency</label>
            <input type="text" name="emergency" id="emergency" class="form-control" value="<%= locals.emergency || '' %>" />
        </div>
        <div class="form-group">
            <label for="comment" style="color:rgb(175, 114, 114)">comment></label>
            <input type="text" name="comment" id="comment" class="form-control" value="<%= locals.comment || '' %>" />
        </div>
        
       
    </form>
</div>
<%- include('partials/footer') %>